<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - File Manager</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
    <link href="~/Content/themes/ui-lightness/jquery-ui.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="row">
                <div class="col-xs-3">
                    <div class="navbar-header">
                        @Html.ActionLink("File Manager", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                </div>
                <div class="col-xs-7">
                    @if (Session["Role"] != null && Session["Role"].ToString() == "Admin")
                    {
                        @Html.ActionLink("Users", "Index", "Users", null, new { @class = "navbar-brand" })
                        
                        @Html.ActionLink("Groups", "Index", "Roles", null, new { @class = "navbar-brand" })
                        
                        @Html.ActionLink("Permissions", "Index", "Permissions", null, new { @class = "navbar-brand" })
                        
                        @Html.ActionLink("Control Permissions", "Index", "ControlPermissions", null, new { @class = "navbar-brand" })
                    }
                </div>
                <div class="col-xs-2">
                    @if (Session["UserId"] != null)
                    {
                        @Html.ActionLink("Sign Out", "SignOut", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    }
                </div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        <br />
        <br />
        <br />
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - File Manager</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/dataTable")
    @Scripts.Render("~/bundles/validate")
    @RenderSection("scripts", required: false)
</body>
</html>