@model DB_Project.DataBase.Models.Permission

<div id="ModalDiv" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Are you sure you want to delete this Permission?</h3>
            </div>
            <div class="modal-body">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Name) :
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                </dl>
                @using (Ajax.BeginForm("Delete", new { id = Model.ID }, new AjaxOptions
                {
                    AllowCache = false,
                    HttpMethod = "POST",
                    InsertionMode = InsertionMode.ReplaceWith,
                    OnBegin = "SendingDataStarted",
                    OnSuccess = "DataSaved",
                    OnFailure = "DataSaveFailed",
                    OnComplete = "DataSent",
                    UpdateTargetId = "mainTableDiv",
                }))
                {
                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </div>
                }
            </div>
            <div class="modal-footer">

                <button type="button" class="btn btn-default" value="Cancel">Cancel</button>
            </div>
        </div>
    </div>
</div>
<script>
    $("button[value='Cancel']").on("click", function () {
        $("#ModalDiv").modal("hide").html("");
    });
</script>